@using Scalesoft.DisplayTool.Renderer.Models
 
@if (DocumentInfo.IsEmbeddable)
{
    <div class="dt-shadow-root-host">
        <template shadowrootmode="open">
            @foreach (var style in DocumentInfo.Styles)
            {
                <style>@((MarkupString)style)</style>
            }

            <div class="display-tool-body render-mode-@DocumentInfo.RenderMode.ToString()?.ToLower()">
                @((MarkupString)DocumentInfo.Content)
            </div>

            @foreach (var script in DocumentInfo.Scripts)
            {
                @* ReSharper disable once OtherTagsInsideScript1 *@
                <script>@((MarkupString)script)</script>
            }
        </template>
    </div>
}
else
{
    <!DOCTYPE html>
    <html lang="">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Display Tool</title>
        @foreach (var style in DocumentInfo.Styles)
        {
            <style>@((MarkupString)style)</style>
        }
    </head>
    <body class="display-tool-body render-mode-@DocumentInfo.RenderMode.ToString()?.ToLower()">

    @((MarkupString)DocumentInfo.Content)

    @foreach (var script in DocumentInfo.Scripts)
    {
        @* ReSharper disable once OtherTagsInsideScript1 *@
        <script>@((MarkupString)script)</script>
    }

    </body>
    </html>
}

@code {
    [Parameter] public required HtmlDocumentInfo DocumentInfo { get; set; }
}
